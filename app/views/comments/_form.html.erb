<%= form_for [@event, comment] do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: comment } %>

  <div class="form-group mb-3">
    <%= f.label t('titles.comment'), class: "col-form-label mb-1 fw-bold" %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <% unless user_signed_in? %>
    <div class="form-group mb-3">
      <%= f.label t('placeholder.name'), class: "col-form-label mb-1 fw-bold" %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('buttons.push'), class: 'btn btn-primary mt-3' %>
  </div>
<% end %>
