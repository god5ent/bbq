<div class="mask d-flex align-items-center h-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6 mt-5">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body p-5">
            <h2 class="text-center mb-5"><%= t('titles.log_in') %></h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <form>
                <div class="form-outline mb-2">
                  <%= f.email_field :email, placeholder: t('placeholder.email'), class: 'form-control form-control-lg' %>
                </div>
                <div class="form-outline mb-2">
                  <%= f.password_field :password, placeholder: t('placeholder.password'), class: 'form-control form-control-lg' %>
                </div>
                <p><small><%= link_to t('text.forgot_password'), new_user_password_path %></small></p>
                <% if devise_mapping.rememberable? %>
                  <div class="field form-check form-switch my-3">
                    <%= f.check_box :remember_me, class: 'form-check-input', type: 'checkbox' %>
                    <label class="form-check-label"><%= t('activerecord.attributes.user.remember_me') %></label>
                  </div>
                <% end %>
                <div class="d-grid gap-2 col-6 mx-auto">
                  <%= f.submit t('buttons.go'), class: 'btn btn-danger mt-3' %>
                </div>
                <p class="text-center text-muted mt-5 mb-0"><%= t('text.no_account') %>
                  <%= link_to t('text.register'), new_user_registration_path, class: 'fw-bold text-body' %></p>
              </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>