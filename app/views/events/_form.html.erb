<%= form_with(model: event) do |form| %>
  <%= form_for(@event) do |error| %>
    <%= render partial: 'partials/form_errors', locals: { model: @event } %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_field :address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :datetime %>
      <p><%= form.datetime_select :datetime, class: 'form-control' %></p>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="actions mt-3">
      <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
      или <%= link_to 'вернуться', :back %>
    </div>
  <% end %>
<% end %>

<% if event.user == current_user %>
  <div class="actions mt-3">
    <%= link_to 'Удалить событие', event_path(@event), method: :delete, data: {confirm: 'are u sure?'}, class: 'btn btn-danger' %>
  </div>

<% end %>