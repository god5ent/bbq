<h1><%= t('titles.edit_event') %></h1>

<div class="row">
  <div class="col-md-6 mt-2">
    <%= render 'form', event: @event %>
  </div>
</div>

<div class="actions mt-3">
  <%= link_to t('buttons.cancel_event'), @event, method: :delete,
              data: { confirm: t('confirm.agree_event') },
              class: 'btn btn-danger' %>
</div>
