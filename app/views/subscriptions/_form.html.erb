<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: subscription } %>
  <% unless user_signed_in? %>

    <div class="form-group mb-3">
      <%= f.label t('placeholder.name'), class: "col-form-label mb-1 fw-bold" %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= f.label t('placeholder.email'), class: "col-form-label mb-1 fw-bold" %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('buttons.subscribe'), class: 'btn btn-primary mt-3' %>
  </div>
<% end %>
